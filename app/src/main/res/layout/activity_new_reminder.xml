<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_main_negin"
    android:orientation="vertical"
    tools:context=".activity.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="15dp"
        android:layout_weight=".15"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgBack"
            android:layout_width="44dp"
            android:layout_height="64dp"
            android:layout_marginBottom="@dimen/ac_main_margin_items_bottom"
            android:layout_marginTop="@dimen/ac_main_margin_items_left"
            android:elevation="@dimen/ac_main_elevation_items"
            app:srcCompat="@drawable/left_arrow" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="11dp"
        android:layout_marginRight="11dp"
        android:layout_marginTop="15dp"
        android:layout_weight=".7"
        android:orientation="vertical">

        <EditText
            android:id="@+id/txtDescription"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/ac_main_margin_items_bottom"
            android:layout_marginLeft="9dp"
            android:hint="Writting a new task . . ."
            android:textColorHint="#0C0C0C"
            android:textSize="24sp"
            android:textStyle="bold|italic" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".15"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgNext"
            android:layout_width="44dp"
            android:layout_height="64dp"
            android:layout_gravity="right"
            android:layout_marginBottom="@dimen/ac_main_margin_items_bottom"
            android:layout_marginRight="25dp"
            android:layout_marginTop="@dimen/ac_main_margin_items_top"
            android:elevation="@dimen/ac_main_elevation_items"
            app:srcCompat="@drawable/right_arrow" />
    </LinearLayout>

</LinearLayout>